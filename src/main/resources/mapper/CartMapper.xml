<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myshop.mapper.CartMapper">

    <resultMap id="CartItemResultMap" type="com.myshop.model.CartItem">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="productId" column="product_id" />
        <result property="quantity" column="quantity" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findByUserId" resultMap="CartItemResultMap">
        SELECT * FROM cart_items WHERE user_id = #{userId}
    </select>

    <select id="findByUserAndProduct" resultMap="CartItemResultMap">
        SELECT * FROM cart_items WHERE user_id = #{userId} AND product_id = #{productId}
    </select>

    <insert id="insertItem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cart_items (user_id, product_id, quantity)
        VALUES (#{userId}, #{productId}, #{quantity})
    </insert>

    <update id="updateItemQuantity">
        UPDATE cart_items
        SET quantity = #{quantity}
        WHERE id = #{id}
    </update>

    <delete id="deleteItem">
        DELETE FROM cart_items WHERE id = #{cartItemId}
    </delete>

    <delete id="deleteByUserId">
        DELETE FROM cart_items WHERE user_id = #{userId}
    </delete>

</mapper>